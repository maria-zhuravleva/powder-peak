<%- include('../partials/html-head') %>
<!-- <link rel="stylesheet" href="/stylesheets/movies/show.css" /> -->
<%- include('../partials/nav') %>

<main>
  <a href="/resorts"> 
    <img id="arrow" src="data:image/png;base64,"/>
  </a>
  <h1><%= title %></h1>
  <section>
    <div>Name: </div>
    <div><%= resort.name %></div>
    <div>Location: </div>
    <div><%= resort.location %></div>
    <div>Difficulty Level: </div>
    <div><%= resort.difficultyLevel %></div>
    <div>Amenities: </div>
    <div><%= resort.amenities.join(', ') %></div>
  </section>
  <section>
    <a href="/resorts/<%= resort._id %>/edit">
      <button>Edit Resort</button>
    </a>
    <form 
    action="/resorts/<%= resort._id %>?_method=DELETE" 
    method="POST"
    >
    <button type="submit">Delete Resort</button>
  </form>
  </section>
  <section>
    <% if (user) { %>
      <form action="/resorts/<%= resort._id %>/favoriteResorts" method="POST">
        <button class="btn" type="submit">Add to Favorite</button>
      </form>
    <% } %>
  </section>
  <section>
    <h2>Reviews</h2>
    <% if (user) { %>
      <form 
        id="add-review-form"
        action="/resorts/<%= resort._id %>/reviews"
        method="POST"
      >
        <label for="content-textarea">Review:</label>
        <textarea name="content" id="content-textarea"></textarea>
        <label for="rating-select">Rating:</label>
        <select name="rating" id="rating-select">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5" selected>5</option>
        </select>
        <button type="submit">Add Review</button>
      </form>
      <% } %>
  </section>
  <section>
    <% if (resort.reviews.length) { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
          </tr>
        </thead>
        <tbody>
          <% resort.reviews?.forEach(function(review) { %>
            <tr>
              <td>
                <p>
                  <%= review.commenter.name %>
                  left a review:
                </p>
              </td>
              <td><%= review.content %></td>
              <td><%= review.rating %></td>
              <td><%= review.createdAt.toLocaleDateString() %></td>
            </tr>
            <tr>
              <% if (review.commenter.equals(user?.profile._id)) { %>
                <a href="/resorts/<%= resort._id %>/reviews/<%= review._id %>/edit">
                  <button class="btn">Edit Review</button>
                </a>
                <form 
                action="/resorts/<%= resort._id %>/reviews/<%= review._id %>?_method=DELETE" 
                method="POST"
                class="inline"
                >
                  <button class="btn" type="submit">Delete Review</button>
                </form>
                <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <h3>No Reviews Yet</h3>
    <% } %>
  </section>
</main>
  
<%- include('../partials/footer') %>