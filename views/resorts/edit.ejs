<%- include('../partials/nav') %>

<section>
  <% if (user) { %>
    <h2>Edit a Resort!</h2>
    <form 
    id="edit-form" 
    action="/resorts/<%= resort._id %>?_method=PUT" 
    method="POST"
    >
      <label for="name-input">
        Name: 
        <input type="text" name="name" value="<%= resort.name %>">
      </label>
      <label for="location-input">
        Location:
        <input type="text" name="location" value="<%= resort.location %>">
      </label>
      <label for="difficultyLevel-input">
        Difficulty Level:
        <input type="text" name="difficultyLevel" value="<%= resort.difficultyLevel %>">
      </label>
      <label for="amenities-input">
        Amenities:
        <input type="text" name="amenities" value="<%= resort.amenities.join(', ') %>">
      </label>
      <button type="submit">Save ðŸ—»</button>
    </form>
  <% } %>
</section>

